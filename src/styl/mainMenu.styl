.mainMenu
  position: absolute
  top: 0
  left: 14em
  right: 0
  height: 100%
  background: #EEE
  z-index: 1000
  display: inline-block

  h1
    margin: 0

  input
    margin-bottom: 10px

  .fullWidth
    width: 100%

  .fa-question-circle
    font-size: 1.3em
    vertical-align: top
    margin-left: 10px
    opacity: 0.6
    color: #333

    &:hover
      opacity: 1.0

  .highlightEditor
    margin-top: 10px
    height: 200px

.menuContainer
  display: flex
  height: 100%

.menuArea
  flex: 1
  display: inline-block
  padding: 20px 40px
  overflow: scroll

.menuList
  display: inline-block
  background: #333
  list-style: none
  width: 170px
  margin: 0
  padding: 20px 0
  li
    padding: 15px 15px 15px 25px
    color: #C2C2C2

    &:not(.activeMenuItem):hover
      color: white
      background: #494949
      cursor: pointer

  span
    margin-right: 5px
    &:hover
      cursor: pointer

li.activeMenuItem
  background: #272727
  color: white
  font-weight: 600

.navBar
  list-style: none
  color: #585858
  border: 1px solid #CCC;
  display: inline-block;
  border-radius: 3px;
  padding: 0;

  .navActive
    background: #CCC

  li
    display: inline-block;
    margin: 0;
    padding: 10px;
    border-right: 1px solid #CCC;

  li:last-child
    border-right: none

  li:not(.navActive):hover
    cursor: pointer
    color: #888

.menuHighlight
  border-top: 1px solid #CCC
  margin-top: 10px
  padding-top: 10px

.menuPlugins
  padding: 20px
  background: #FFF
  border-radius: 4px
  margin-top: 10px
  max-height: 400px
  overflow: scroll

  .menuPlugin
    border-bottom: 1px solid #CCC
    margin-bottom: 10px

    &:last-child
      border-bottom: none

    &:hover .pluginButtons
      display: block

.pluginButtons
  display: none
  float: right

.activeConnections
  span, strong, i
    margin-right: 10px

  i
    opacity: 0.6
    &:hover
      opacity: 1

.messageTypes
  background: white
  list-style-type: none
  padding: 0
  width: 200px

  li
    padding: 10px 15px 10px 30px

    &:hover
      background: #ACDF98
      color: white

  .active
    color: white
    background: #8CC077
